    <!--close Account popup-->
    <!--start setting popup-->
    <div id="setting" class="">
        <div class="form-container">
            <a class="pull-right" href=" "><i class="fa fa-close"></i></a>
            <h2 align="center" class="text-primary">Password Setting</h2><hr />
            <form action="Homepage.html" method="post">
                <div class="form-group">
                    <label>Old Password</label>
                    <input class="form-control" type="text" name="fname" id="fname" required>
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    <input class="form-control" type="email" name="email" id="fname" required>
                </div>
                <div class="form-group">
                    <label for="pwd">Confirm Password</label>
                    <input class="form-control" type="tel" name="number" id="pwd" required>
                </div>
                <button type="submit" class="btn btn-block btn-primary" id="reg">SUBMIT </button><br>
                <a href="#moresetting" class="pull-right" onclick="showmoresetting()">Set More Details</a>
            </form>
        </div>
    </div>
    <!--close setting popup-->
    <!--start more setting popup-->
    <div id="moresetting" class="">
        <div class="form-container">
            <a class="pull-right" href=" "><i class="fa fa-close"></i></a>
            <h2 align="center" class="text-primary">User Detail Setting</h2><hr />
            <form action="Homepage.html" method="post">
                <div class="form-group">
                    <label>User Name</label>
                    <input class="form-control" type="text" name="fname" id="fname" required>
                </div>
                <div class="form-group">
                    <label>User Email</label>
                    <input class="form-control" type="email" name="email" id="fname" required>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input class="form-control" type="email" name="email" id="fname" required>
                </div>
                <div class="form-group">
                    <label>Mobile No</label>
                    <input class="form-control" type="email" name="email" id="fname" required>
                </div>
                <button type="submit" class="btn btn-block btn-primary" id="reg">EDIT</button>
            </form>
        </div>
    </div>
    <!--close more setting popup-->
</div>



@section Scripts{
    <script>
        function search(string) {
            window.find(string);
        } 

        function showtest() {
            $('#test-form').animate({ top: '15%' }, 500);
            $('#test-form-div').animate({ top: '20%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidetest() {
            $('#test-form').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function showsetting() {
            $('#setting').animate({ top: '15%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidesetting() {
            $('#setting').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function showmoresetting() {
            $('#moresetting').animate({ top: '15%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidemoresetting() {
            $('#moresetting').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }



        function Clearfield() {
            document.getElementById('from').value = "";
            document.getElementById('to').value = "";
            document.getElementById('msg').value = "";
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#sendbtn").click(function () {
                var frommsg = $("#from").val();
                var tomsg = $("#to").val();
                var msg = $("#msg").val();
                //alert(tomsg);
                //alert(compemail);
                $.ajax({
                    url: '/MessageBoard/SendParentMessage',
                    type: 'post',
                    dataType: 'json',
                    data:
                    {
                        FromMsg: frommsg,
                        ToMsg: tomsg,
                        Msg: msg,
                    },
                    success: function (result) {

                        alert("Message send successfully");
                        location.reload();
                    },

                });
            });

        });

        function showpopup() {
            $('#senddiv').animate({ top: '23%' }, 500);
            document.getElementById("overlay").style.display = "block";

        }
        function hidepopup() {
            $('#senddiv').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }
        function hidepopup1() {
            $('#senddiv').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }
    </script>
    }

