@section Scripts{
    <script>
        function showtest() {
            $('#test-form').animate({ top: '15%' }, 500);
            $('#test-form-div').animate({ top: '20%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidetest() {
            $('#test-form').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function showsetting() {
            $('#setting').animate({ top: '15%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidesetting() {
            $('#setting').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function showmoresetting() {
            $('#moresetting').animate({ top: '15%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidemoresetting() {
            $('#moresetting').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function search(string) {
            window.find(string);
        }
    </script>
    <script>
        $(document).ready(function () {

            $.ajax({

                url: '/Student/CookieId',
                type: 'get',
                dataType: 'json',

                success: function (result) {
                    debugger

                    document.getElementById('name').innerHTML = result.studentName;
                    document.getElementById('address').innerHTML = result.studentAddress;
                    document.getElementById('gender').innerHTML = result.studentGender;
                    document.getElementById('dob').innerHTML = result.studentDob;
                    document.getElementById('father').innerHTML = result.fatherName;
                    document.getElementById('mother').innerHTML = result.motherName;


                },
            });

        });


    </script>
}

