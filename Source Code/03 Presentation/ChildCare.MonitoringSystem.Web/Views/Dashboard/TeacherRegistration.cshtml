@{
    ViewData["Title"] = "form1";
    Layout = "_AppLayout";
}

@section LeftNavigation{
    <partial name="_AdminLeftNavigation" />
}

<!-- MAIN CONTENT-->
<div class="main-content">
    @*<div class="section__content section__content--p30">*@
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="title-3 m-b-5">
                    Teacher Registration Form
                </h3> 
            </div>
            <div class="card-body card-block" style="padding:60px;">
                <form action="" method="post" id="TeacherForm" style="width:100%;">
                    <div class="form-group">
                        <label for="mname" class=" form-control-label">User Name</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>

                            </div>
                            <input type="text" id="uname" name="uname" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nf-email" class=" form-control-label">Email</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="email" id="uemail" name="nf-email" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nf-password" class=" form-control-label">Password</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-asterisk"></i>
                            </div>
                            <input type="password" id="upassword" name="nf-password" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mobileno" class=" form-control-label">Mobile Number</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-mobile"></i>
                            </div>
                            <input type="tel" id="umobileno" name="mobileno" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <button type="submit" id="teacherlogin" class="btn btn-primary ">
                    Submit
                </button>
                <button type="reset" onclick="reset();" class="btn btn-success ">
                    Reset
                </button>
            </div>
        </div>
    </div>
</div>

<!-- END MAIN CONTENT-->
<!--start Account popup-->


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#teacherlogin").click(function () {
                var uname = $("#uname").val();
                var uemail = $("#uemail").val();
                var upassword = $("#upassword").val();
                var umobileno = $("#umobileno").val();
                //alert(uname);
                //alert(uemail);
                //alert(upassword);
                //alert(umobileno);
                $.ajax({
                    url: '/User/AddTeacher',
                    type: 'post',
                    dataType: 'json',
                    data:
                    {
                        UserName: uname,
                        UserEmail: uemail,
                        UserPassword: upassword,
                        UserMobileNo: umobileno,
                    },
                    success: function (result) {

                        alert("Successfully inserted Teacher");

                    },

                });
            });

        });

        function showtest() {
            $('#test-form').animate({ top: '15%' }, 500);
            $('#test-form-div').animate({ top: '20%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidetest() {
            $('#test-form').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function showsetting() {
            $('#setting').animate({ top: '15%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidesetting() {
            $('#setting').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }

        function showmoresetting() {
            $('#moresetting').animate({ top: '15%' }, 500);
            $('.account-dropdown').hide();
            document.getElementById("overlay").style.display = "block";
        }
        function hidemoresetting() {
            $('#moresetting').animate({ top: '-500%' }, 500);
            document.getElementById("overlay").style.display = "none";
        }
        function reset() {
            document.getElementById('TeacherForm').reset();
        }


        function search(string) {
            window.find(string);
        }
    </script>
}

